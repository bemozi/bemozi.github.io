{
	"name": "Statim: Open Source Local-First Web App",
	"short_name": "Statim",
	"description": "Statim is a fully auditable web app that offers sustained functionality without internet connectivity and complete data ownership, all with a responsive, intuitive, and distraction-free interface.",
	"display": "standalone",
	"display_override": ["window-controls-overlay"],
	"start_url": "/",
	"theme_color": "#FAFAFA",
	"icons": [
		{
			"src": "assets/logo.svg",
			"sizes": "any",
			"type": "image/svg+xml"
		},
		{
			"src": "assets/logo-maskable.svg",
			"sizes": "any",
			"type": "image/svg+xml",
			"purpose": "maskable"
		}
	],
	"shortcuts": [
		{
			"name": "QURAN",
			"url":"assets/quran.htm",
			"icons": [
				{
					"src": "assets/logo.svg",
					"sizes": "any",
					"type": "image/svg+xml"
				}
			]
		}
	]
}
